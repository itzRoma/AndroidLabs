<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AC4646"
    tools:context=".audio.AudioPlayerActivity">

    <ImageView
        android:id="@+id/audio_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@id/audio_title"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:src="@drawable/baseline_audiotrack_24"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/audio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/audio_controls"
        android:ellipsize="marquee"
        android:padding="20dp"
        android:singleLine="true"
        android:text="AUDIO TITLE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/audio_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="40dp">

        <SeekBar
            android:id="@+id/audio_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/audio_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audio_seek_bar"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:text="00:00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/audio_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audio_seek_bar"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:text="00:00"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/audio_total_time"
            android:padding="20dp">

            <ImageView
                android:id="@+id/audio_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_skip_previous_24"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/audio_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_pause_circle_outline_24"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/audio_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_skip_next_24"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>